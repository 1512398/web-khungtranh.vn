            data: [12, 50, 100, 156, 200, 295],
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)'
            ],
            borderColor: [
                'rgba(255,99,132,1)'
            ],
            borderWidth: 1
            }]  
    }
var dataTemplate =  {
        labels: '',
        datasets: [{
            label: 'Thống kê doanh số',
            data: '',
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)'
            ],
            borderColor: [
                'rgba(255,99,132,1)'
            ],
            borderWidth: 1
            }]  
    }
var ctx = document.getElementById("myChart").getContext('2d');

function loadChart(data){
    {{!-- console.log(data) --}}
    var myChart = new Chart(ctx, {
    type: 'line',
    data: data,
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero:true
                }
            }]
        }
    }
});
}

$('#btnThongKe').on('click',function(){
    $.ajax({
                url: "/admin/thongke",
                type: "POST",
                {{!-- headers: {'Authorization': 'bearer ' + $.cookie('JWT')}, --}}
                {{!-- data: $('#thongkeform').serialize(), --}}
                data: {fromDate: $('#fromDate').val(), toDate: $('#toDate').val(), type: $('#type').val()},
                success: function (data) {
                    labels = []
                    dataset = []
                    var type = $('#type').val();
                    console.log(data);
                    for (i=0;i<data.length;i++){
                        d = new Date(data[i].createdAt);
                        console.log(d)
                        switch (type){
                            case 'month':
                                labels.push('Tháng '+ (parseInt(d.getMonth())+1).toString())
                                break;
                            case 'day':
                                labels.push(d.getDate()+'/'+(d.getMonth()+1)+'/'+d.getFullYear())
                        }
                        
                        dataset.push(parseInt(data[i].total));
                        {{!-- console.log(data[i].total); --}}
                    }
                    dataTemplate.labels = labels;
                    dataTemplate.datasets[0].data = dataset;
                    loadChart(dataTemplate);
                }
            })
    return false;
})

$(document).ready(function(){
    loadCatalog();
})
</script>