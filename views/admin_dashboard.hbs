<script>
function loadCatalog() {
        var url = '/admin/getCatalogInfo';
        $.ajax({
            url: url,
            cache: true,
            headers: {'Authorization': 'bearer ' + $.cookie('JWT')},
            success: function (data) {
                getTemplateAjax('/templates/catalog_select_s.hbs', '#catalogSelect', data);
            }
        })
    }
var dataDummy =  {
