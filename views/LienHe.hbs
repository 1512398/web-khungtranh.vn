<main class="pb-5 mb-5">
    <div class="container">
        <div class="row">
            <div class="col-md-8 align-content-center lienhengay">
                <h2 style="color:#03899c" class="mb-3 mt-2">Liên hệ ngay với chúng tôi</h2>
                {{#if (notEmpty message)}}
                <div class="alert alert-success">
                    <i class="fas fa-check"></i>
                    {{message}}</div>
                {{/if}}
                <form action="/LienHe/sendFeedBack" method="POST">
                    <div class="form-group">
                        <label for="lienhe">Họ và tên</label>
                        <input type="text" class="form-control" name="name" placeholder="Họ và tên" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Địa chỉ Email</label>
                        <input type="email" class="form-control" name="email" placeholder="name@example.com" required>
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlInput1">Số điện thoại</label>
                        <input type="text" class="form-control" name="phone" placeholder="Số điện thoại">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea1">Nội dung tin nhắn</label>
                        <textarea class="form-control" name="content" rows="5" required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary" style="margin:10px auto">Gửi tin nhắn</button>
                </form>
                

            </div>
            <div class="col-md-4 thongtinlienhe">
              
            </div>
        </div>

    </div>
</main>